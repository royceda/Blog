<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Autor:</strong>
  <%= @post.autor %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>




<h2>Comments</h2>
 <div id="comments">
         <%= render :partial => @post.comments %>
 </div>


<%= form_for [@post, Comment.new] do |f| %>
        <p>
                <%= f.label :text, "New comment" %><br/>
                <%= f.text_area :text %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>




<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> 
