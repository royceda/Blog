<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Autor:</strong>
  <%= @post.autor %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>


<% @posts.comments.each do |comment| %>
<%= comment.text %>
<%= form_for [@post, @post.comments.build] do |f|%>
<%= f.text_area :text, :size => '40x10'  %>
<%= f.submit "Post comment " %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> 
<% end %>
